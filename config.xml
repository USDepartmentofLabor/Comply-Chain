<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10101" id="gov.dol.complychain" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Comply Chain</name>
    <description>
        A DoL application describing about dealing with Child Labor and Forced Labor.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="DisallowOverscroll" value="true" />
    </platform>
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.4">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.1+" />
    </plugin>
    <icon height="120" platform="ios" src="res/icon/share/comply-chain-app-120.png" width="120" />
    <icon height="180" platform="ios" src="res/icon/share/comply-chain-app-180.png" width="180" />
    <icon height="144" platform="ios" src="res/icon/share/comply-chain-app-144.png" width="144" />
    <icon height="72" platform="ios" src="res/icon/share/comply-chain-app-72.png" width="72" />
    <icon height="76" platform="ios" src="res/icon/share/comply-chain-app-76.png" width="76" />
    <icon height="152" platform="ios" src="res/icon/share/comply-chain-app-152.png" width="152" />
    <icon height="167" platform="ios" src="res/icon/share/comply-chain-app-167.png" width="167" />
    <icon height="20" platform="ios" src="res/icon/share/comply-chain-app-20.png" width="20" />
    <icon height="29" platform="ios" src="res/icon/share/comply-chain-app-29.png" width="29" />
    <icon height="40" platform="ios" src="res/icon/share/comply-chain-app-40.png" width="40" />
    <icon height="50" platform="ios" src="res/icon/share/comply-chain-app-50.png" width="50" />
    <icon height="57" platform="ios" src="res/icon/share/comply-chain-app-57.png" width="57" />
    <icon height="60" platform="ios" src="res/icon/share/comply-chain-app-60.png" width="60" />
    <icon height="100" platform="ios" src="res/icon/share/comply-chain-app-100.png" width="100" />
    <icon height="114" platform="ios" src="res/icon/share/comply-chain-app-114.png" width="114" />
    <icon height="1024" platform="ios" src="res/icon/share/comply-chain-app-1024.png" width="1024" />
    <icon height="72" platform="android" src="res/icon/share/comply-chain-app-72.png" width="72" />
    <plugin name="cordova-plugin-actionsheet" spec="^2.3.3" />
    <plugin name="cordova-clipboard" spec="^1.2.1" />
    <plugin name="cordova-plugin-x-toast" spec="^2.7.2" />
    <plugin name="cordova-pdf-generator" spec="^2.0.8" />
    <engine name="android" spec="^8.0.0" />
    <engine name="ios" spec="^5.0.0" />
</widget>
